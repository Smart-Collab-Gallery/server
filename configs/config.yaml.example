server:
  http:
    addr: 0.0.0.0:8000
    timeout: 1s
  grpc:
    addr: 0.0.0.0:9000
    timeout: 1s
data:
  database:
    driver: mysql
    source: root:root~@tcp(127.0.0.1:3306)/test?parseTime=True&loc=Local
  redis:
    network: tcp
    addr: 127.0.0.1:6379
    password: ""          # Redis 密码，如果没有密码则留空
    db: 0                 # Redis 数据库编号 (0-15)
    read_timeout: 0.2s
    write_timeout: 0.2s
auth:
  jwt_secret: "smart-collab-gallery-secret-key-change-in-production"
  jwt_expire: 3600s
cos:
  secret_id: ""
  secret_key: ""
  default_bucket: "image"
  buckets:
    image:
      bucket_name: "image-bucket-1250000000"
      region: "ap-guangzhou"
      upload_dir: "images"
      allowed_extensions:
        - ".jpg"
        - ".jpeg"
        - ".png"
        - ".gif"
        - ".webp"
      max_size: 10485760            # 10MB
      presigned_expire: 10m         # 预签名 URL 过期时间 (支持: s秒, m分钟, h小时)
    video:
      bucket_name: "video-bucket-1250000000"
      region: "ap-guangzhou"
      upload_dir: "videos"
      allowed_extensions:
        - ".mp4"
        - ".avi"
        - ".mov"
        - ".mkv"
        - ".webm"
      max_size: 104857600           # 100MB
      presigned_expire: 30m         # 视频文件较大，设置 30 分钟过期
    document:
      bucket_name: "doc-bucket-1250000000"
      region: "ap-guangzhou"
      upload_dir: "documents"
      allowed_extensions:
        - ".pdf"
        - ".doc"
        - ".docx"
        - ".xls"
        - ".xlsx"
        - ".ppt"
        - ".pptx"
      max_size: 52428800            # 50MB
      presigned_expire: 15m         # 文档设置 15 分钟过期
email:
  smtp_host: "smtp.example.com"      # SMTP 服务器地址 (如 smtp.qq.com, smtp.163.com, smtp.gmail.com)
  smtp_port: 587                      # SMTP 端口 (587 为 TLS, 465 为 SSL)
  smtp_user: "your-email@example.com" # SMTP 用户名/邮箱
  smtp_password: "your-password"      # SMTP 密码/授权码
  from_email: "noreply@example.com"   # 发件人邮箱
  from_name: "Smart Collab Gallery"   # 发件人名称
