server:
  http:
    addr: 0.0.0.0:8000
    timeout: 1s
  grpc:
    addr: 0.0.0.0:9000
    timeout: 1s
data:
  database:
    driver: mysql
    source: root:root~@tcp(127.0.0.1:3306)/test?parseTime=True&loc=Local
  redis:
    addr: 127.0.0.1:6379
    read_timeout: 0.2s
    write_timeout: 0.2s
auth:
  jwt_secret: "smart-collab-gallery-secret-key-change-in-production"
  jwt_expire: 3600s
cos:
  secret_id: ""
  secret_key: ""
  default_bucket: "image"
  buckets:
    image:
      bucket_name: "image-bucket-1250000000"
      region: "ap-guangzhou"
      upload_dir: "images"
      allowed_extensions:
        - ".jpg"
        - ".jpeg"
        - ".png"
        - ".gif"
        - ".webp"
      max_size: 10485760
    video:
      bucket_name: "video-bucket-1250000000"
      region: "ap-guangzhou"
      upload_dir: "videos"
      allowed_extensions:
        - ".mp4"
        - ".avi"
        - ".mov"
        - ".mkv"
        - ".webm"
      max_size: 104857600
    document:
      bucket_name: "doc-bucket-1250000000"
      region: "ap-guangzhou"
      upload_dir: "documents"
      allowed_extensions:
        - ".pdf"
        - ".doc"
        - ".docx"
        - ".xls"
        - ".xlsx"
        - ".ppt"
        - ".pptx"
      max_size: 52428800
